---
pagination:
  data: questionData.flashCardQuestions
  size: 1
  alias: question
permalink: /all/short-answer/{{ pagination.pageNumber + 1 }}/
eleventyExcludeFromCollections: true
---

{% extends 'layout.njk' %}

{% set questionTotal = questionData.flashCardQuestions.length %}

{% block titleAndDescription %}
  <title>Question {{ pagination.pageNumber + 1 }} of {{ questionTotal }} | All Questions | Trivia11y</title>
  <meta name="description" content="Answer question {{ pagination.pageNumber + 1 }} of {{ questionTotal }} in all categories.">
{% endblock %}

{% block content %}
  <h1>Question {{ pagination.pageNumber + 1 }} of {{ questionTotal }}</h1>

  {% from 'macros/short-answer.njk' import shortAnswer %}
  {{ shortAnswer(question) }}

  <div class="cmp-pagination">
    {% if questionTotal > pagination.pageNumber + 1 %}
      <a href="/all/short-answer/{{ pagination.pageNumber + 2 }}/">
        Next Question
      </a>
    {% else %}
      <span></span>
    {% endif %}

    {% if pagination.pageNumber + 1 > 1 %}
      <a href="/all/short-answer/{{ pagination.pageNumber }}/">
        Previous Question
      </a>
    {% else %}
      <span></span>
    {% endif %}
  </div>
{% endblock %}

{% block scripts %}
  <script>
    {% include 'js/short-answer.js' %}
  </script>
{% endblock %}
