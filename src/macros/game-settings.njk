{% macro gameSettings(title, categories) %}
	<div class="obj-width-limiter">
		<h1>{{ title }}</h1>

		<form data-game-settings>
			<fieldset>
				<legend>Question Categories</legend>
				<div>
					{% for category in categories %}
						<div>
							<input id="{{ category | slugify }}" type="checkbox" name="category" value="{{ category }}">
							<label for="{{ category | slugify }}">{{ category }} <span data-category="{{ category }}"></span></label>
						</div>
					{% endfor %}
				</div>
			</fieldset>
			<div>
				<label for="max-questions">Max Questions</label>
				<p id="max-questions-description">
					There are <span data-question-total>0</span> questions in the chosen categories. Some questions overlap in category, so this total number may not reflect the sum of questions presented above.
				</p>
				<input id="max-questions" type="text" name="max-questions" inputmode="numeric" pattern="\d+" aria-describedby="max-questions-description">
			</div>
			<div>
				<button type="submit">Start Game</button>
			</div>
		</form>
	</div>
{% endmacro %}
