{% macro flashCard(question) %}
  <div class="cmp-question">
    {{ question.Question | mdToHtml | safe }}
  </div>
  <details class="cmp-answer">
    <summary class="cmp-answer__summary">
      Reveal Answer
    </summary>
    <div class="cmp-answer__reveal">
      {{ question.Answer | mdToHtml | safe }}
      {% if question.Explanation %}
        {{ question.Explanation | mdToHtml | safe }}
      {% endif %}
    </div>
  </details>
{% endmacro %}
